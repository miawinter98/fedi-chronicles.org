---
import circle from "../assets/Circle.svg"

interface Props {
    title: string;
    description: string;
    date: Date;
    type: string;
}
const { title, type, description, date} = Astro.props;
---

<li class="flex gap-6 h-60 -mt-1">
    <p class="w-32 mt-6 text-right max-md:hidden">{date.toLocaleDateString(undefined, {month: 'long', year: 'numeric'})}</p>
    <div class="relative w-20 text-primary">
        <svg class="absolute left-0 top-0 w-full h-full" width="80" height="80" viewBox="0 0 80 240" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M40 240 V75" stroke-width="10" stroke="#7500F0"/>
            <path d="M80 40C80 62.0914 62.0914 80 40 80C17.9086 80 0 62.0914 0 40C0 17.9086 17.9086 0 40 0C62.0914 0 80 17.9086 80 40Z" fill="#7500F0"/>
            <path d="M73 40C73 58.2254 58.2254 73 40 73C21.7746 73 7 58.2254 7 40C7 21.7746 21.7746 7 40 7C58.2254 7 73 21.7746 73 40Z" fill="#2D0F47"/>
        </svg>
        {type == 'online' && (
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="absolute inset-x-4 top-4">
                <path fill-rule="evenodd" d="M12 3.75a.75.75 0 0 1 .75.75v6.75h6.75a.75.75 0 0 1 0 1.5h-6.75v6.75a.75.75 0 0 1-1.5 0v-6.75H4.5a.75.75 0 0 1 0-1.5h6.75V4.5a.75.75 0 0 1 .75-.75Z" clip-rule="evenodd" />
            </svg>
        )}
        {type == 'offline' && (
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="absolute inset-x-4 top-4">
                <path fill-rule="evenodd" d="M5.47 5.47a.75.75 0 0 1 1.06 0L12 10.94l5.47-5.47a.75.75 0 1 1 1.06 1.06L13.06 12l5.47 5.47a.75.75 0 1 1-1.06 1.06L12 13.06l-5.47 5.47a.75.75 0 0 1-1.06-1.06L10.94 12 5.47 6.53a.75.75 0 0 1 0-1.06Z" clip-rule="evenodd" />
            </svg>
        )}
        {type == 'news' && (
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="absolute inset-x-4 top-4">
                <path fill-rule="evenodd" d="M4.125 3C3.089 3 2.25 3.84 2.25 4.875V18a3 3 0 0 0 3 3h15a3 3 0 0 1-3-3V4.875C17.25 3.839 16.41 3 15.375 3H4.125ZM12 9.75a.75.75 0 0 0 0 1.5h1.5a.75.75 0 0 0 0-1.5H12Zm-.75-2.25a.75.75 0 0 1 .75-.75h1.5a.75.75 0 0 1 0 1.5H12a.75.75 0 0 1-.75-.75ZM6 12.75a.75.75 0 0 0 0 1.5h7.5a.75.75 0 0 0 0-1.5H6Zm-.75 3.75a.75.75 0 0 1 .75-.75h7.5a.75.75 0 0 1 0 1.5H6a.75.75 0 0 1-.75-.75ZM6 6.75a.75.75 0 0 0-.75.75v3c0 .414.336.75.75.75h3a.75.75 0 0 0 .75-.75v-3A.75.75 0 0 0 9 6.75H6Z" clip-rule="evenodd" />
                <path d="M18.75 6.75h1.875c.621 0 1.125.504 1.125 1.125V18a1.5 1.5 0 0 1-3 0V6.75Z" />
            </svg>
        )}
    </div>
    <div class="flex-1 mt-4">
        <h2 class="line-clamp-2 text-xl md:text-2xl mb-1" title={title}>{title}</h2>
        <p class="line-clamp-[6] md:line-clamp-[7] hyphens-auto text-justify max-w-3xl" lang="en" title={description}>
            <strong class="md:hidden">{date.toLocaleDateString(undefined, {month: 'long', year: 'numeric'})} <br></strong>
            {description}
        </p>
    </div>
</li>